<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/RedView"
        android:layout_width="173dp"
        android:layout_height="83dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_button"
        android:padding="16dp"
        android:text="RED"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134" />

    <TextView
        android:id="@+id/GreenView"
        android:layout_width="173dp"
        android:layout_height="80dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/background_button"
        android:padding="16dp"
        android:text="GREEN"
        android:textAlignment="center"
        android:textColor="#0E9A14"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RedView" />

    <TextView
        android:id="@+id/BlueView"
        android:layout_width="184dp"
        android:layout_height="81dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_button"
        android:padding="16dp"
        android:text="BLUE"
        android:textAlignment="center"
        android:textColor="#1334E8"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GreenView" />

    <TextView
        android:id="@+id/targetView"
        android:layout_width="326dp"
        android:layout_height="65dp"
        android:layout_marginTop="96dp"
        android:text="Not Yet Clicked"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BlueView" />

</androidx.constraintlayout.widget.ConstraintLayout>